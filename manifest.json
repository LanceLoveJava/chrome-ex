{
    "name": "牛牛私人定制",
    "description": "自定义工具",
    "version": "1.0",
    "manifest_version": 3,
    // 会一直常驻的后台JS或后台页面
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    // 需要直接注入页面的JS,css
    "content_scripts": [
        {
            //"matches": ["http://*/*", "https://*/*"],
            // "<all_urls>" 表示匹配所有地址
            "matches": ["<all_urls>"],
            // 多个JS按顺序注入
            "js": ["js/jquery-3.3.1.min.js", "js/content-script.js"],
            // JS的注入可以随便一点，但是CSS的注意就要千万小心了，因为一不小心就可能影响全局样式
            "css": ["style/norm.css"],
            // 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://www.javbus.com/uncensored*"
            ],
            "css": [
                "/style/jav.css"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://www.baidu.com/"
            ],
            "js": [
                "page/demo.js"
            ],
            "run_at": "document_end"
        }
    ],
    "options_page": "options.html",
    // 权限申请
    "permissions": [
        "declarativeContent",
        "contextMenus", // 右键菜单
        "storage", // 插件本地存储
        "tabs", // 标签
        "activeTab",
        "scripting",
        "debugger"
    ],
    // 当某些特定页面打开才显示的图标 v2才能用
//    "page_action":
//    {
//        "default_icon": "images/icon.png",
//        "default_title": "特定页面",
//        "default_popup": "popup.html"
//    },
    // 插件主页，这个很重要，不要浪费了这个免费广告位
    "homepage_url": "https://www.baidu.com",
    "action": {
        "default_title": "牛牛的工具箱",
        "default_popup": "popup.html",
        "default_icon": {
            "32": "/images/icon128.png",
            "48": "/images/icon128.png",
            "128": "/images/icon128.png"
        }
    },
    "icons": {
        "16": "/images/icon128.png",
        "32": "/images/icon128.png",
        "48": "/images/icon128.png",
        "128": "/images/icon128.png"
    },
    "default_locale": "zh_CN" // 默认语言,国际化,必须配置_locales目录
}
